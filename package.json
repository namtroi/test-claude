{
  "name": "repo-visualization-tool",
  "version": "1.0.0",
  "private": true,
  "description": "Developer tool for visualizing repository structure and detecting architectural drift",
  "scripts": {
    "dev:api": "pnpm --filter @repo-viz/api dev",
    "dev:web": "pnpm --filter @repo-viz/web dev",
    "dev": "pnpm run dev:api & pnpm run dev:web",
    "build:shared": "pnpm --filter @repo-viz/shared build",
    "build:api": "pnpm --filter @repo-viz/api build",
    "build:web": "pnpm --filter @repo-viz/web build",
    "build": "pnpm run build:shared && pnpm run build:api && pnpm run build:web",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r exec rm -rf dist node_modules .next"
  },
  "keywords": [
    "monorepo",
    "visualization",
    "architecture",
    "drift-detection"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
